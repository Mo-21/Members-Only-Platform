extend ../layout

block content 

    div.error-group 
      if errors 
        each error in errors
          div.alert.alert-danger.alert-dismissible.fade.show
            .error= error.msg
            button.btn-close(data-bs-dismiss="alert" aria-label="Close")

    .sign-container
        h1.brand-brand Messenger And More
        h3 Sign-In
        form(action="" method="POST")
            div.group
                .input-group.mb-3
                  label(class="input-group-text" for="email" id="basic-addon1") Email
                  input.form-control.form-control-sm(type="text" id="email" name="username" required)
                .input-group.mb-3
                  label(class="input-group-text" for="password" id="basic-addon1") Password
                  input.form-control.form-control-sm(type="password" id="password" name="password" required)
        
            
            button.btn.btn-primary.btn-sm(type="submit") Sign-in

        div.mt-4 You don't have an account? 
            a(href="/sign-up") #[strong Sign Up]
              
                